		{
			"name": "Sign-in (Personal Access Token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var response = JSON.parse(responseBody);",
							"pm.environment.set(\"site-id\", response.credentials.site.id);",
							"pm.environment.set(\"tableau-auth-token\", response.credentials.token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"credentials\": {\n        \"site\": { \"contentUrl\": \"{{content-url}}\" },\n        \"personalAccessTokenName\": \"{{pat-name}}\",\n        \"personalAccessTokenSecret\": \"{{pat-secret}}\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{server}}/api/{{api-version}}/auth/signin",
					"host": [
						"{{server}}"
					],
					"path": [
						"api",
						"{{api-version}}",
						"auth",
						"signin"
					]
				}
			},
			"response": []
		},
